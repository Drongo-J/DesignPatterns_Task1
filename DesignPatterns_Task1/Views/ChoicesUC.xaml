<UserControl x:Class="DesignPatterns_Task1.Views.ChoicesUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesignPatterns_Task1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Wheat">
        <Canvas>
            <TextBlock FontSize="50" Canvas.Left="231" Canvas.Top="86">Choose Factory</TextBlock>
            <Button Command="{Binding VictorianCommand}" Height="50" Width="100" Canvas.Left="516" Canvas.Top="200" >Victorian</Button>
            <Button Command="{Binding ArtDecoCommand}" Height="50" Width="100" Canvas.Left="350" Canvas.Top="200" HorizontalAlignment="Center" VerticalAlignment="Top" >ArtDeco</Button>
            <Button Command="{Binding ModernCommand}" Height="50" Width="100" RenderTransformOrigin="1.665,3.57" Canvas.Left="184" Canvas.Top="200" >Modern</Button>
        </Canvas>
    </Grid>
</UserControl>
