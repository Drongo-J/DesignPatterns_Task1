<UserControl x:Class="DesignPatterns_Task1.Views.FurnitureCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesignPatterns_Task1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="120"
             Height="130" Width="120"
             Margin="10,20,0,0">
    <Grid Background="White">
        <Border BorderBrush="Black"
            BorderThickness="3">
            <Image Stretch="Fill" Source="{Binding ImageSource}" Margin="0,0,0,25">

            </Image>
        </Border>
        <Border  BorderBrush="Black"
            BorderThickness="3" Margin="0,103,0,0">
            <TextBlock Text="{Binding Text}" FontSize="14"
                       TextAlignment="Center">
            </TextBlock>
        </Border>
        
    </Grid>
</UserControl>
